{% extends 'dashboard/business_base.html' %}
{% load static %}

{% block title %}Customer Report - {{ tenant.name }}{% endblock %}

{% block extra_css %}
<style>
    .report-header {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
    }
    
    .report-actions {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }
    
    .action-btn {
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-weight: 600;
        transition: all 0.3s;
    }
    
    .btn-export {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }
    
    .btn-export:hover {
        background: rgba(255, 255, 255, 0.3);
        color: white;
    }
    
    .report-card {
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        margin-bottom: 25px;
    }
    
    .metric-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }
    
    .metric-box {
        text-align: center;
        padding: 20px;
        border-radius: 10px;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }
    
    .metric-value {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin: 10px 0;
    }
    
    .metric-label {
        color: #6c757d;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
    }
    
    .chart-container {
        position: relative;
        height: 350px;
        margin-top: 20px;
    }
    
    .customer-card {
        display: flex;
        align-items: center;
        padding: 15px;
        border-radius: 10px;
        background: #f8f9fa;
        margin-bottom: 10px;
        transition: all 0.3s;
    }
    
    .customer-card:hover {
        background: #e9ecef;
        transform: translateX(5px);
    }
    
    .customer-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1.2rem;
        margin-right: 15px;
    }
    
    .customer-info {
        flex-grow: 1;
    }
    
    .customer-name {
        font-weight: 600;
        margin-bottom: 3px;
    }
    
    .customer-stats {
        font-size: 0.85rem;
        color: #6c757d;
    }
    
    .segment-bar {
        display: flex;
        height: 40px;
        border-radius: 10px;
        overflow: hidden;
        margin-top: 15px;
    }
    
    .segment-part {
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 0.85rem;
        transition: all 0.3s;
    }
    
    .segment-part:hover {
        opacity: 0.9;
    }
</style>
{% endblock %}

{% block content %}
<!-- Report Header -->
<div class="report-header">
    <div class="d-flex justify-content-between align-items-start">
        <div>
            <h1><i class="bi bi-people"></i> Customer Insights Report</h1>
            <p style="opacity: 0.9; margin-bottom: 0;">
                {{ start_date|date:"M d, Y" }} - {{ end_date|date:"M d, Y" }}
            </p>
        </div>
        <a href="{% url 'reports:dashboard' %}" class="btn btn-light">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
    
    <div class="report-actions">
        <a href="{% url 'reports:export_customers' %}" class="action-btn btn-export">
            <i class="bi bi-download"></i> Export to CSV
        </a>
        <a href="javascript:window.print()" class="action-btn btn-export">
            <i class="bi bi-printer"></i> Print Report
        </a>
    </div>
</div>

<!-- Key Customer Metrics -->
<div class="metric-grid">
    <div class="metric-box">
        <div class="metric-label">Total Customers</div>
        <div class="metric-value">{{ customer_metrics.total_customers }}</div>
    </div>
    
    <div class="metric-box">
        <div class="metric-label">Active Customers</div>
        <div class="metric-value">{{ customer_metrics.active_customers }}</div>
    </div>
    
    <div class="metric-box">
        <div class="metric-label">VIP Customers</div>
        <div class="metric-value">{{ customer_metrics.vip_customers }}</div>
    </div>
    
    <div class="metric-box">
        <div class="metric-label">New This Period</div>
        <div class="metric-value">{{ new_customers_count }}</div>
    </div>
    
    <div class="metric-box">
        <div class="metric-label">Retention Rate</div>
        <div class="metric-value">{{ retention_rate }}%</div>
    </div>
    
    <div class="metric-box">
        <div class="metric-label">Avg. Customer Value</div>
        <div class="metric-value">{{ currency_symbol }}{{ customer_metrics.avg_customer_value|floatformat:0 }}</div>
    </div>
</div>

<!-- Customer Acquisition Trend -->
<div class="report-card">
    <h3><i class="bi bi-graph-up"></i> Customer Acquisition Trend</h3>
    <div class="chart-container">
        <canvas id="acquisitionChart"></canvas>
    </div>
</div>

<!-- Customer Segmentation -->
<div class="report-card">
    <h3><i class="bi bi-pie-chart"></i> Customer Segmentation by Spending</h3>
    
    <div class="row">
        <div class="col-md-6">
            {% for segment in spending_segments %}
            <div style="margin-bottom: 15px;">
                <div class="d-flex justify-content-between mb-2">
                    <span><strong>{{ segment.name }}</strong> (>{{ currency_symbol }}{{ segment.min }})</span>
                    <span>{{ segment.customers }} customers</span>
                </div>
                <div class="progress" style="height: 25px;">
                    {% widthratio segment.customers customer_metrics.total_customers 100 as percentage %}
                    <div class="progress-bar" role="progressbar" 
                         style="width: {{ percentage }}%; background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                        {{ percentage }}%
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        
        <div class="col-md-6">
            <div class="chart-container" style="height: 300px;">
                <canvas id="segmentChart"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Top Customers -->
<div class="row">
    <!-- By Loyalty Points -->
    <div class="col-lg-4 mb-4">
        <div class="report-card">
            <h3><i class="bi bi-star"></i> Top by Points</h3>
            {% for customer in top_customers.by_points %}
            <div class="customer-card">
                <div class="customer-avatar">
                    {{ customer.customer.first_name|first }}{{ customer.customer.last_name|first }}
                </div>
                <div class="customer-info">
                    <div class="customer-name">{{ customer.customer.get_full_name }}</div>
                    <div class="customer-stats">
                        <i class="bi bi-star-fill text-warning"></i> {{ customer.loyalty_points }} points
                    </div>
                </div>
            </div>
            {% empty %}
            <p class="text-muted">No data available</p>
            {% endfor %}
        </div>
    </div>
    
    <!-- By Spending -->
    <div class="col-lg-4 mb-4">
        <div class="report-card">
            <h3><i class="bi bi-currency-dollar"></i> Top by Spending</h3>
            {% for customer in top_customers.by_spend %}
            <div class="customer-card">
                <div class="customer-avatar">
                    {{ customer.customer.first_name|first }}{{ customer.customer.last_name|first }}
                </div>
                <div class="customer-info">
                    <div class="customer-name">{{ customer.customer.get_full_name }}</div>
                    <div class="customer-stats">
                        <i class="bi bi-cash text-success"></i> {{ currency_symbol }}{{ customer.total_spent|floatformat:2 }}
                    </div>
                </div>
            </div>
            {% empty %}
            <p class="text-muted">No data available</p>
            {% endfor %}
        </div>
    </div>
    
    <!-- By Purchases -->
    <div class="col-lg-4 mb-4">
        <div class="report-card">
            <h3><i class="bi bi-bag-check"></i> Most Frequent</h3>
            {% for customer in top_customers.by_purchases %}
            <div class="customer-card">
                <div class="customer-avatar">
                    {{ customer.customer.first_name|first }}{{ customer.customer.last_name|first }}
                </div>
                <div class="customer-info">
                    <div class="customer-name">{{ customer.customer.get_full_name }}</div>
                    <div class="customer-stats">
                        <i class="bi bi-cart text-primary"></i> {{ customer.purchase_count }} purchases
                    </div>
                </div>
            </div>
            {% empty %}
            <p class="text-muted">No data available</p>
            {% endfor %}
        </div>
    </div>
</div>

<!-- Additional Insights -->
<div class="report-card">
    <h3><i class="bi bi-lightbulb"></i> Key Insights</h3>
    
    <div class="row">
        <div class="col-md-6">
            <h5>Customer Engagement</h5>
            <ul style="line-height: 2;">
                <li>Average purchase frequency: <strong>{{ avg_purchase_frequency|floatformat:1 }} transactions per customer</strong></li>
                <li>Customer retention rate: <strong>{{ retention_rate }}%</strong></li>
                <li>VIP customers represent: <strong>{% widthratio customer_metrics.vip_customers customer_metrics.total_customers 100 %}% of customer base</strong></li>
            </ul>
        </div>
        
        <div class="col-md-6">
            <h5>Growth Opportunities</h5>
            <ul style="line-height: 2;">
                <li>{{ new_customers_count }} new customers acquired this period</li>
                <li>Focus on converting {{ spending_segments.3.customers }} inactive customers</li>
                <li>Opportunity to upgrade {{ spending_segments.1.customers }} medium-value customers to high-value</li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
// Customer Acquisition Chart
const acquisitionData = {{ acquisition_data|safe }};
const acqLabels = Object.keys(acquisitionData);
const acqValues = Object.values(acquisitionData);

const ctx1 = document.getElementById('acquisitionChart');
new Chart(ctx1, {
    type: 'bar',
    data: {
        labels: acqLabels,
        datasets: [{
            label: 'New Customers',
            data: acqValues,
            backgroundColor: 'rgba(240, 147, 251, 0.7)',
            borderColor: '#f093fb',
            borderWidth: 2
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: false
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                ticks: {
                    stepSize: 1
                }
            },
            x: {
                ticks: {
                    maxRotation: 45,
                    minRotation: 45
                }
            }
        }
    }
});

// Segmentation Chart
const ctx2 = document.getElementById('segmentChart');
new Chart(ctx2, {
    type: 'doughnut',
    data: {
        labels: [
            {% for segment in spending_segments %}
            '{{ segment.name }}'{% if not forloop.last %},{% endif %}
            {% endfor %}
        ],
        datasets: [{
            data: [
                {% for segment in spending_segments %}
                {{ segment.customers }}{% if not forloop.last %},{% endif %}
                {% endfor %}
            ],
            backgroundColor: [
                '#f093fb',
                '#f5576c',
                '#ffa07a',
                '#e9ecef'
            ],
            borderWidth: 0
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                position: 'bottom'
            }
        }
    }
});
</script>
{% endblock %}
